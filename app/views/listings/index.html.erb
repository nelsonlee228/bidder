<h1>Listing listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th>End on</th>
      <th>Reserve price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%= link_to 'New Listing', new_listing_path %>
  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.detail.truncate(50) %></td>
        <td><%= listing.end_on %></td>
        <td><%= listing.reserve_price %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <% if listing.draft? %>
            <%=button_to "Publish", publish_listing_path(listing), method: :patch%>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

