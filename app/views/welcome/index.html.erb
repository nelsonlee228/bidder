<h1>Listing listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th>End on</th>
      <th>Reserve price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%= link_to 'New Listing', new_listing_path %>
  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.detail.truncate(50) %></td>
        <td><%= listing.end_on %></td>
        <td><%= listing.reserve_price %></td>
        <td><%= link_to 'Show', listing %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

